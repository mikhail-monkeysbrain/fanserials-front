.serial
	&__item
		position relative
		cursor pointer
		&:hover
			.serial__item__hovered
				opacity 1	
			.serial__item--translate__item
				display block
			.serial__item--header
				color #e78108
				text-decoration underline
				.serial__item--header__name,
				.serial__item--header__properties
					color #e78108
		&__hovered
			opacity 0
			position absolute
			left 0
			top 0
			width 100%
			height 100%
			background rgba(0,0,0, .5)
			transition animation
			.play
				width 40px
				height 40px
				background url('../img/play.png') center no-repeat
				background-size cover
				position absolute
				left 0
				right 0
				margin 0 auto
				top calc(50% - 20px)
		&--translate
			position absolute
			width 100%
			display flex
			justify-content space-between
			bottom 0
			background rgba(0,0,0, .8)
			color #fff
			text-align center
			flex-wrap wrap
			&__item
				min-width 30%
				flex-grow 1
				font-size 12px
				padding 7px
				font-family 'PTSansBold'
				border-top: 1px solid #e98c1d
				margin: 1px
				&:nth-child(4)
					display none 
		&--header
			text-align center
			margin-top 1em
			&__name
				color #363636
				font-size: 18px
				font-weight: 700
				line-height: 22px
			&__properties
				color: #666666
				font-size: 14px
				font-weight: 400
				line-height: 22px
.wrapper__serial
	position relative
	box-shadow 0 15px 20px -10px black
	
.blocks
	margin-top 2em
	display flex
	justify-content space-between
	.item
		text-align center
		background red
		padding 2em