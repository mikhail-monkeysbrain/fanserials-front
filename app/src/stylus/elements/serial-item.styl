.serial
	&__item
		position relative
		cursor pointer
		&:hover
			.serial__item__hovered
				opacity 1	
			.serial__item--translate__item
				display block
			.serial__item--header
				color #e78108
				text-decoration underline
				.serial__item--header__name,
				.serial__item--header__properties
					color #e78108
		&__hovered
			opacity 0
			position absolute
			left 0
			top 0
			width 100%
			height 98%
			background rgba(0,0,0, .5)
			transition animation
			.play
				width 40px
				height 40px
				background url('../img/play.png') center no-repeat
				background-size cover
				position absolute
				left 0
				right 0
				margin 0 auto
				top calc(50% - 20px)
		&--translate
			position absolute
			width 100%
			display flex
			justify-content space-between
			bottom 0
			background rgba(0,0,0, .8)
			color #fff
			text-align center
			flex-wrap wrap
			&__item
				min-width 30%
				flex-grow 1
				font-size 12px
				padding 7px
				font-family 'PTSansBold'
				border-top: 1px solid #e98c1d
				margin: 1px
				&:nth-child(4)
					display none 
		&--header
			text-align center
			margin-top 1em
			&__name
				color #363636
				font-size: 18px
				font-weight: 700
				line-height: 22px
			&__properties
				color: #666666
				font-size: 14px
				font-weight: 400
				line-height: 22px
.wrapper__serial
	position relative
	box-shadow 0 15px 20px -10px black
	&__noshadow
		box-shadow 0 0 0 0 transparent
		&:hover
			box-shadow 0 0 0 0 transparent
.blocks
	margin-top 2em
	display flex
	justify-content center
	.item
		text-align center
		padding 2em
		line-height: 34px
		color: #b0b0b0
		font-size: 18px
		font-weight: 400
		border-bottom 3px solid transparent
		cursor pointer
		transition animation
		&__current
			color: #5a5a5a
			font-size: 18px
			font-weight: 700
			border-color #e67e02
.genres
	width calc(100% + 1.8em)
	box-shadow: inset 0 0 7px rgba(0, 0, 0, 0.35)
	background-color: #f7f7f7
	margin-left -.9em
	display flex
	flex-wrap wrap
	justify-content center
	align-items center
	padding 24px
	.item
		cursor pointer
		transition animation
		padding .5em
		margin .5em
		border: 1px solid #e2e2e2
		background-color: #efefef
		color: #808080
		font-size: 14px
		font-weight: 400
		line-height: 18px
		text-align center
		&__current
			color: #fff
			font-weight: 700
			border-color #e67e02
			text-align center
			background linear-gradient(to right, #fc9b29 0%, #f88701 100%)