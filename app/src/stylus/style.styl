@import helpers
@import variables

*
	margin: 0
	padding: 0 
	box-sizing border-box

body
	font-family "PTSansRegular"
	background url('../img/bg__top.png') top center no-repeat, black
	background-size 100%
	
.wrapper
	&--main
		background #fff
		width 1170px
		margin: 190px auto 0
		box-shadow: 0 2px 5px rgba(0, 0, 0, 0.25)
		padding 30px 15px
		
a
	text-decoration: none
	color inherit

li
	list-style none

input
	&.search
		border 0
		outline none
		background url('../img/search.svg') no-repeat 20px center, dark
		border-left 2px solid #242424
		border-right 2px solid #242424
		position: relative
		height 54px
		width 110px
		padding-left 45px
		font-size 15px
		transition animation
		left 0
		&.js-opened
			width: 920px
			position: absolute
			left: -920px
		&::placeholder
			color: #ececec
			transition animation
		/*&:focus
			&::placeholder
				color transparent*/
					
.h1
	font-size: 30px
	font-weight: 700
	line-height: 18px
	width: 169px
	letter-spacing -1px
.string
	width 100%
	color: #fffefe
	font-family: "PTSansRegular"
	font-size: 14px
	font-weight: 700
	text-transform: uppercase
	display block
	box-sizing content-box
	padding 0 1.1em 0 1.1em
	margin-left -1.1em
	text-align center
	&__big
		padding-top 25px
		padding-bottom 25px
	&__yellow
		background linear-gradient(to right, #fc9b29 0%, #f88701 100%)

footer
	width 100%
	max-width 1170px
	margin 0 auto
	img
		width 100%


@import "blocks/header.styl" 
@import "blocks/new-serials.styl" 
@import "blocks/list-abc.styl" 
@import "blocks/news-list.styl" 

@import "elements/serial-item.styl" 


//modificators

.border__orange
	border-left 3px solid #f88701
	padding 20px
	box-shadow: 0 0 24px rgba(0, 0, 0, 0.25)
	&::before
		content ''
		display block
		position absolute
		left -10px
		width: 0
		height: 0
		border-top: 9px solid transparent
		border-right: 7px solid #f88701
		border-bottom: 9px solid transparent