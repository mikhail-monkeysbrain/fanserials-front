.news-list
	margin-top 48px
	div.info
		&::after
			content ''
			position absolute
			display block
			background: #fff
			z-index 101
			bottom 0
			width 100%
			left 9px
			height 1em
	.rate__small
		margin-top -15px
		.kinigo
			margin-left -7px
	.play
		top calc(50% - 19px) !important
	.serial__item
		margin-bottom 0
		&--header__name
			line-height 10px
			margin-bottom 5px
			@media screen and (max-width: 768px)
				font-size 18px
		&--header__properties
			@media screen and (max-width: 768px)
				font-size 16px
		&:hover
			.serial__item__hovered
				opacity 1
		&__hovered
			transition animation
			position absolute
			opacity 0
	@media screen and (max-width: 960px)
		overflow auto
	&--card
		&.literal__item--card
			z-index 2
			display none
			width: 278px
			height: 262px
			left calc(100% - 9px)
			overflow hidden
			&.js__show
				display flex
	&--block
		margin 25px 0
		display flex
		align-items center
		
	&--item
		cursor pointer
		text-align center
		width 100%
		overflow hidden
		img
			position relative
			width 100%
			left 0
			top 0
span
	&.info
		z-index 1
		position absolute
		border-radius 50%
		width: 23px
		height: 23px
		border: 1px solid #000000
		background url('../img/info.png') center no-repeat
		color: #202020
		font-size: 18px
		font-weight: 700
		line-height: 20px
		text-align center
		right 13px
		top 22px
		@media screen and (max-width: 960px)
			display none