header
	width 100%
	background dark
	color #fff
	position: relative
.header
	width 1170px
	margin: 0 auto
	height 54px
	&--right
		float: right
		position: relative
		display flex
		align-items center
		.user
			border-right 2px solid #242424
			img
				width: 31px
				height: 31px
				border: 2px solid #7c7c7c
				border-radius 50%
				margin 10px
.logo
	margin-right 30px
	flex-shrink 0
	padding-top 2px
.nav
	&__top
		float left
		display flex 
		align-items center
		flex-shrink 0
		&--item
			margin 0 15px
			a
				height 14px
				line-height: 19px
				font-size: 15px
				color: #ececec
				line-height 54px
				transition animation
				&:hover
					color: #ea8f22
					text-shadow: 0 0 5px rgba(231, 138, 27, 0.25)
.wrapper__search
	display flex
	position: relative
	height 54px
.search__top
	color #fff
	&--close
		width 2em
		height 2em
		color #fff
		position: absolute
		right 1.5em
		display: none
		font-size 35px
		text-align: right
		padding-top 3px