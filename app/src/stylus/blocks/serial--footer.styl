.serial--footer
	background #151515
	padding 1em
	box-sizing content-box
	margin-left -1em
	margin-right -1em
	display flex
	justify-content space-between
	align-items flex-start
	&__semi
		width 50%
		&:nth-child(1)
			margin-right 1em
		&:nth-child(2)
			margin-left 1em
		img
			margin-top 31px
			width: 100%
			height: auto
			margin-bottom 45px
	p
		font-size 16px
		color #fff
.tabs
	ul
		display flex
		justify-content space-between
		align-items center
		margin-bottom 22px
		li
			color: #c9c9c9
			border-bottom 2px solid #6c6c6c
			padding 20px
			width 100%
			display flex
			justify-content center
			align-items center
			position relative
			text-align center
			line-height 2
			transition animation
			&:hover
				color: #f48705
			a
				position absolute
				width 100%
				height 100%
				left 0
				top 0
			&.ui-state-active
				color: #f48705
				border-color: #f48705
				a
					border-bottom 1px solid #f48705
	p
		font-size 15px

.feedback
	a
		color #666
		font-size 16px
		font-weight 700
	span
		width: 1.25em
		height: 1.25em
		background: url('../img/ostavit_review.svg') center no-repeat
		background-size contain
		display: inline-block
		vertical-align: bottom
		margin-right .5em
	.item
		width 98.5%
		margin 0 auto
		padding 2em
		border 2px solid #666
		position relative
		span
			padding .5em 1em
			color #fff
			text-transform uppercase
			font-weight 700
			font-size 15px
			position absolute
			top -1.5em
			right 1em
	.owl-nav
		opacity 1
		margin-left -.1em